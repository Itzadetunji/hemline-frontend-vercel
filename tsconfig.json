{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"lib": ["DOM", "DOM.Iterable", "WebWorker"],
		"types": ["vite/client"],

		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"compileOnSave": true
}
